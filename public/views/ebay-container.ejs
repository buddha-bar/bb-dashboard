<div class='store-container'>

  <span class="store-utility-icons">
    <!-- <i class="fa fa-refresh right"></i> -->
    <!-- <i class="fa fa-times-circle-o right"></i> -->
  </span>
  
  <h1>Ebay</h1>
  
  <div class="item" ng-repeat="item in ebayItems"> 
    <img class="left" ng-src="http:{{item.image}}" width="50px" height="50px" />
    
    <div class="left">
      <h3>{{item.name}}</h3>
      <p> Stock level: {{item.stock}}</p>
    </div>

    <div class="clear"></div>
  </div>
</div>